# zbze_ocr Environment Variables
# Copy this file to .env and fill in your actual values

# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-generate-using-django-command
ZBZE_OCR_VIEWER_PG_DB=zbze_ocr_web_db
ZBZE_OCR_VIEWER_PG_USER=zbze_ocr
ZBZE_OCR_VIEWER_PG_PWD=your-database-password
ZBZE_OCR_VIEWER_PG_HOST=localhost
POSTGRES_OCR_VIEWER_PORT=5432

# Airflow PostgreSQL Connection (if different from above)
# AIRFLOW_PG_USER=zbze_ocr
# AIRFLOW_PG_PASSWORD=your-airflow-db-password
# AIRFLOW_PG_DB=zbze_ocr_db

# Tesseract Training Paths
TESSTRAIN_PROJECT_DIR=/path/to/tesstrain
GLOBAL_TESSDATA_DIR=/usr/share/tessdata

# Ground Truth and Training Data
GROUND_TRUTH_DIR=/path/to/ground_truth/data
TESSTRAIN_DATA_DIR=/path/to/training/data
TESSTRAIN_LOG_FILE=/path/to/tesstrain/logs/output.log

# Airflow User Password (for notebook authentication)
# ZBZE_AIRFLOW_USER_PSWD=your-airflow-user-password
